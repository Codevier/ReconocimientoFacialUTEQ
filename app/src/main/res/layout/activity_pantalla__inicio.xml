<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#539CBD"
    tools:context=".Pantalla_Inicio">

    <ImageView
        android:id="@+id/imgImagenLogo"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"

        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@mipmap/rep_app" />

    <TextView
        android:id="@+id/txtJuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="179dp"
        android:fontFamily="@font/alex_brush"
        android:text="Juntos"
        android:textSize="89sp" />

    <TextView
        android:id="@+id/txtUTEQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/chela_one"
        android:text="UTEQ"
        android:textSize="89sp" />
</RelativeLayout>

